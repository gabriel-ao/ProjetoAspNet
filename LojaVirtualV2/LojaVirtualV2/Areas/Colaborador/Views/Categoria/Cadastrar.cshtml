@model LojaVirtualV2.Models.Categoria
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control col-sm-8" placeholder="Digite o nome da categoria">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Slug"></label>
        <input asp-for="Slug" class="form-control col-sm-8" placeholder="Digite o slug da categoria">
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaPaiId"></label>
        <select asp-for="CategoriaPaiId" class="form-control col-sm-8" asp-items="@ViewBag.Categorias">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
    </div>

    <!--  botao abaixo -->
    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>